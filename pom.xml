        <system>YaCy Bugtracker</system>
        <url>http://bugs.yacy.net</url>
    </issueManagement>
    <scm>
        <connection>scm:git:https://github.com/yacy/yacy_search_server.git</connection>
        <url>https://github.com/yacy/yacy_search_server</url>
    </scm>
